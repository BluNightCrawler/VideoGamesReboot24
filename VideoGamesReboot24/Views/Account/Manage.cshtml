@model VideoGamesReboot24.Models.ViewModels.UserAccount

<h2>Manage Account</h2>

<form asp-action="Manage" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>
            @User.Identity.Name
            @{
                if (Model.IsAdmin)
                {
                    <span class="badge text-bg-primary">Admin</span>
                }
            }
        </h4>
        <hr />
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label class="control-label col-md-2">UserName</label>
                    <input class="form-control disabled" value="@Model.UserName" disabled/>
                </div>
                <div class="form-group mt-1">
                    <label class="control-label col-md-2">Email</label>
                    <input class="form-control disabled" value="@Model.Email" disabled/>
                </div>
                <div class="form-group mt-1">
                    <label class="control-label col-md-2">Image</label>
                    <div class="">
                        <input asp-for="ImagePath" type="hidden" value="@(Model.ImagePath == "" ? "$" : Model.ImagePath )" />
                        <input class="form-control" type="file" name="Image" accept="image/*" />
                    </div>
                </div>
            </div>
            <div class="col">
                <img class="img-thumbnail" src="@Url.Content(Model.ImagePath)" style="max-height: 350px" />
            </div>
        </div>
        <div class="form-group mt-3">
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5" />
                </svg>
                Back
            </a>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

