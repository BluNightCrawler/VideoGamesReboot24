@model UserWithRoles

<h2>Edit User</h2>
<h3>@Model.UserName</h3>


<form asp-action="EditUser" method="post">
    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="UsersWithRoles">
            <thead>
                <tr>
                    <td><b>ID</b></td>
                    <td><b>Username</b></td>
                    <td><b>Email</b></td>
                </tr>
            </thead>
                <tr>
                    <td>
                        @Model.Id
                    </td>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                </tr>
        </table>
        <table class="table table-hover table-bordered table-condensed">
            <thead>
                <tr>
                    <td>Role</td>
                    <td></td>
                </tr>
            </thead>
            @foreach ((string,bool) role in ViewBag.AvailableRoles)
            {
                <tr>
                    <td>@role.Item1</td>
                    <td>
                        @Html.CheckBox(role.Item1,role.Item2)

                    </td>
                </tr>
            }
        </table>

        <div class="form-group mt-3">
            <a class="btn btn-secondary" asp-controller="Admin" asp-action="ManageUsers">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5" />
                </svg>
                Back
            </a>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>