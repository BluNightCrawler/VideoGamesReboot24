@model VideoGamesReboot24.Models.ViewModels.AccessTokenExpireDate?

<div class="w-100 m-auto text-center">
    <h1 class="h3 mb-3 fw-normal">Admin Page</h1>
    <div class="d-flex justify-content-center">
        <a class="btn btn-primary btn-square mx-3" asp-controller="Home" asp-action="Import">Import More Games!</a>
        <a class="btn btn-primary btn-square mx-3" asp-controller="Admin" asp-action="ManageUsers">Manager Users</a>
        <div class="mx-3">
            <a class="btn btn-primary btn-square" asp-controller="Admin" asp-action="UpdateAccessToken">
                <span>Update Access Token
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle mb-1" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                    </svg>
                </span>
            </a>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle mb-1" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
            </svg>
            @if (Model is not null) {
                <span>Expires: @Model?.expirationDate.ToShortDateString()</span>
            }
        </div>
    </div>
</div>