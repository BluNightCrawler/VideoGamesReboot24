@model VideoGame
@{
    ViewData["Title"] = $"Details - {Model.ProductID}";
}
<DocType html>
<div class="card" style="width: 15rem;">
        <img src="@(Model.ImagePath == "" ? "/Images/placeholder.jpg" : @Url.Content(Model.ImagePath))" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.ProductName</h5>
        <h6 class="card-subtitle text-muted">@Model.Price.ToString("c")</h6>
        <p class="card-text">@Model.Description</p>
        @if (User.IsInRole("Admin"))
        {
            <td>
                <a class="" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a>
                <span> | </span>
                <a class="" asp-controller="Products" asp-action="Delete" asp-route-id="@Model.ProductID">Delete</a>
            </td>
        }
        <hr />
        <a href="#" class="btn btn-primary">Add to Cart</a>
    </div>
</div>
<div>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Catalog">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5" />
        </svg>
        Back
    </a>
</div>
