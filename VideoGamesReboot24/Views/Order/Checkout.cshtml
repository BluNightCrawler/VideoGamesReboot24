@model Order
<div class="w-100 m-auto" style="max-width:500px;">
    <h2>Checkout</h2>
    <p>Don't enter real details please</p>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Checkout" method="post">
        <h5 class="my-2">Shipping Address</h5>
        <div class="form-group my-1">
            <label>Name:</label><input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group my-1">
            <label>Line 1:</label><input asp-for="Line1" class="form-control" />
        </div>
        <div class="text-center mt-3">
            <input class="btn btn-primary" type="submit" value="Complete Order" />
        </div>
    </form>
</div>